<%= form_for @photo, :html => { :multipart => true } do |f| %>
    <h3>Submit a Photo</h3>

    <%= f.label :photo, "Image*" %>
    <%= f.file_field :photo %>

    <%= f.label :title, "Title*" %>
    <%= f.text_field :title, placeholder: "Title" %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Tell a little about this photo!" %>

    <%= f.submit "Submit", class: "button" %>
<% end %>