<%= form_for @photo, :html => { :multipart => true } do |f| %>
    <h3>Edit Photo</h3>

    <%= f.label :title, "Title*" %>
    <%= f.text_field :title %>

    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Tell a little about this photo" %>

    <%= f.submit "Save" %>

  <%= link_to "Delete Photo", photo_path(@photo), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>